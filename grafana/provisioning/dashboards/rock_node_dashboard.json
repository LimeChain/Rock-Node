{
    "annotations": { "list": [] },
    "editable": true,
    "panels": [
      {
        "id": 1,
        "title": "Active Publisher Sessions",
        "type": "stat",
        "datasource": {
          "type": "prometheus",
          "uid": "rocknode-prometheus"
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "options": {
          "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [ { "expr": "rocknode_active_publish_sessions" } ]
      },
      {
        "id": 2,
        "title": "Block Processing Rate",
        "type": "timeseries",
        "datasource": {
          "type": "prometheus",
          "uid": "rocknode-prometheus"
        },
        "gridPos": { "h": 8, "w": 18, "x": 6, "y": 0 },
        "options": {
          "tooltip": { "mode": "multi" },
          "legend": { "displayMode": "list", "placement": "bottom" }
        },
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "custom": {
              "axisPlacement": "right",
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "fillOpacity": 10,
              "gradientMode": "opacity"
            },
            "unit": "Bps"
          }
        },
        "targets": [
          {
            "expr": "rate(rocknode_blocks_acknowledged[1m])",
            "legendFormat": "Blocks/sec (1m avg)"
          }
        ]
      },
      {
        "id": 3,
        "title": "Total Blocks Acknowledged",
        "type": "stat",
        "datasource": {
          "type": "prometheus",
          "uid": "rocknode-prometheus"
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 4 },
        "options": {
          "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
          "orientation": "auto",
          "textMode": "auto",
          "colorMode": "value",
          "graphMode": "area"
        },
        "targets": [ { "expr": "rocknode_blocks_acknowledged" } ]
      }
    ],
    "refresh": "10s",
    "schemaVersion": 36,
    "style": "dark",
    "tags": [],
    "time": { "from": "now-1h", "to": "now" },
    "timepicker": {},
